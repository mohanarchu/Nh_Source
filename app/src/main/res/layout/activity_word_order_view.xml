<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/scroling"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_back"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#BBDBF2"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/back1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Work Order"
                android:textColor="#094E80"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@drawable/logout" />


        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blue_back">

                    <TextView
                       android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Order No"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   android:textSize="17dp"

                    android:id="@+id/wonumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:paddingLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blue_back">

                    <TextView
                       android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Status"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   android:textSize="17dp"
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:paddingLeft="5dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blue_back">

                    <TextView
                       android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Customer"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   android:textSize="17dp"
                    android:id="@+id/cust_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:paddingLeft="5dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blue_back">

                    <TextView
                       android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Department"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   android:textSize="17dp"
                    android:id="@+id/edit_dept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:paddingLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blue_back">

                    <TextView
                       android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Equipment"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   android:textSize="17dp"
                    android:id="@+id/edit_equip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:paddingLeft="5dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blue_back">

                    <TextView
                       android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="CEID"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   android:textSize="17dp"
                    android:id="@+id/edit_cedi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:paddingLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blue_back">

                    <TextView
                       android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:text="Problem Reported"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   android:textSize="17dp"
                    android:id="@+id/prob_reported"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:paddingLeft="5dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.29"
                    android:background="@color/blue_back">

                    <TextView
                       android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Reported By"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   android:textSize="17dp"
                    android:id="@+id/req_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:paddingLeft="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:background="@color/light_grey"
                    android:gravity="center"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/phonecall"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/phn" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blue_back">
                    <TextView
                       android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Opened Date"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   android:textSize="17dp"
                    android:id="@+id/edit_openeddate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:paddingLeft="5dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/edit_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/blue_back">

                        <TextView
                           android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Problem Absorbed"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black"
                       android:textSize="17dp"
                        android:id="@+id/prob_absorverd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/blue_back">

                        <TextView
                           android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Action Taken"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black"
                       android:textSize="17dp"
                        android:id="@+id/action_taken"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/blue_back">
                        <TextView
                           android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Approve By"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black"
                       android:textSize="17dp"
                        android:id="@+id/approved_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="5dp" />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/blue_back"
                    android:layout_width="150dp"
                    android:layout_height="30sp">

                    <TextView
                       android:textSize="17dp"
                        android:id="@+id/otp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Generate OTP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </android.support.v7.widget.CardView>
                <TextView

                    android:layout_gravity="center"
                    android:textColor="@color/blue_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/generated"/>

                <LinearLayout
                  android:id="@+id/otp_view"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:layout_marginBottom="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <EditText
                      android:id="@+id/otp_text"
                      android:layout_marginLeft="3dp"
                      android:layout_weight="1.3"
                      android:background="@drawable/textview"
                      android:layout_width="0dp"
                      android:layout_height="35dp" />

                  <TextView
                     android:textSize="17dp"
                      android:id="@+id/verify"
                      android:layout_marginLeft="3dp"
                      android:layout_weight="0.6"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:text="Verify"
                      android:background="@color/blue_back"
                      android:textColor="@android:color/white"
                      android:textStyle="bold" />


              </LinearLayout>



                <LinearLayout
                    android:id="@+id/hide"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Please digitally sign by clicking on signature field"
                    android:textColor="@color/blue_back"
                    android:textSize="13sp" />

                <FrameLayout
                    android:layout_marginBottom="10dp"
                    android:id="@+id/sign_view"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white">


                    <ImageView
                        android:id="@+id/sign_image"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/blue_back">

                        <TextView
                           android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Comments"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <EditText
                        android:id="@+id/comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="5dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                       android:textSize="17dp"
                        android:id="@+id/reopen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="Reopen"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <Button
                       android:textSize="17dp"
                        android:id="@+id/approve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="Approve"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/blue_back">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Acknowledged\nDate"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black"
                       android:textSize="17dp"
                        android:id="@+id/edit_acknowledged_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="5dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/blue_back">

                        <TextView
                           android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"

                            android:text="Completed Date"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black"
                       android:textSize="17dp"
                        android:id="@+id/edit_closeddate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:paddingLeft="5dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Button
                   android:textSize="17dp"
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:text="Back"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
